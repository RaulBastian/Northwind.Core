<Window x:Class="Northwind.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Northwind.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <ListView Grid.Row="0" Name="Customers" ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Item.CompanyName}"></Label>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>

        <Border Grid.Row="1" Height="5" Background="Green"></Border>

        <StackPanel Grid.Row="2" DataContext="{Binding SelectedItem.Item, ElementName=Customers}">
            <TextBox Text="{Binding CompanyName }"></TextBox>
            <TextBox Text="{Binding ContactName  }"></TextBox>
            <TextBox Text="{Binding ContactTitle }"></TextBox>
        </StackPanel>
        
    </Grid>
</Window>
